    script(src='../public/plugins/input-mask/jquery.inputmask.extensions.js')
    // page script
    script.
      $(function () {
      $("#example1").DataTable();
      $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false
      });
      $("[data-mask]").inputmask();
      //Datemask2 mm/dd/yyyy
      $("#datemask2").inputmask("mm/dd/yyyy", {"placeholder": "mm/dd/yyyy"});
      //non-customized
      $('button#selectedCategory').click(function(){
        $category = $(this).val();
        $.getJSON("/getOrderByCategory", {
        category : $category,
        ajax : true
        },function(j){
          //var addToTable = '';
          var newTableField = $(document.createElement('div'))
          var addToTable = '<table id="example2" class="table table-bordered table-hover"><thead><th>User</th><th>Meal</th><th>Details</th></thead><tbody>';
          console.log(j.length)
          for (var i = 0; i < j.length; i++) {
            for (var k = 0; k < j[i].menu.length; k++) {
              addToTable += '<tr><td>'+ j[i].user +'</td><td>'+ j[i].menu[k]._id.item.title +'</td>';
              if (j[i].menu[k].attributes)
                addToTable += '<td>'+ j[i].menu[k].attributes.name +'</td></tr>';
              else if (j[i].menu[k]._id.item.subItems.length > 0){
                addToTable += '<td>'
                for (var l = 0; l < j[i].menu[k]._id.item.subItems.length; l++) {
                  addToTable += ''+ j[i].menu[k]._id.item.subItems[l].quantity+'-'+j[i].menu[k]._id.item.subItems[l].name +',  '+j[i].menu[k]._id.item.subItems[l].container+'-container<br>';
                }
                addToTable += ' </td></tr>';
              }
              else
                addToTable += '</tr>';
            }
          }
          addToTable += '</tbody></table>'
          //$('#example2 tbody').append(addToTable);
          //$(addToTable).appendTo($('#example2 tbody'));
          newTableField.after().html(addToTable);
          $('#displaySection').html('');
          newTableField.appendTo('#displaySection');
        })
      });
      //customized
      $('button#selectedCustomized').click(function(){
        $category = $(this).val();
        $.getJSON("/getCustomizedOrderByCategory", {
        category : $category,
        ajax : true
        },function(j){
          console.log(j);
        })
      });
      });
